<%= form_with(model: @blog, local: true) do |form| %>

<br>
<br>
    <div class="title">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="time">
        <%= form.label :deadline %>
        <%= form.datetime_select :deadline %>
    </div>

    <div class="content">
        <%= form.label :content %>
        <%= form.text_field :content %>
    </div>

    
    <%= form.label :release, "Status" %><br>
    <%= form.select :release,[["Public", "Publi"],["Private", "Private"]], include_blank: "選択してください" %><br>

    <div class="submit">
        <%= form.submit %>
    </div>

    
<% end %>