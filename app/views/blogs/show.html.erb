<p id="notice"><%= notice %></p>

<p>
    <strong>タイトル</strong>
        <%= @blog.title %>
</p>

<p>
    <strong>時間</strong>
        <%= @blog.start_time.strftime("%H:%M") %>
</p>

<p>
    <strong>内容</strong>
        <%= @blog.content %>
</p>



<%= link_to "Done", blog_path(@blog.id), method: :delete %>
